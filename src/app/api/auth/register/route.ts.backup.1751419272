import { NextRequest, NextResponse } from 'next/server';
import { prisma } from '@/lib/prisma';
import bcrypt from 'bcryptjs';
import { emailService } from '@/lib/email.service';

export async function POST(request: NextRequest) {
  try {
    const { name, email, password } = await request.json();

    console.log('ðŸ”— API Registro - Creando usuario:', { name, email });

    // Validaciones bÃ¡sicas
    if (!name || !email || !password) {
      return NextResponse.json(
        { 
          success: false,
          message: 'Nombre, email y contraseÃ±a son requeridos' 
        },
        { status: 400 }
      );
    }

    if (password.length < 8) {
      return NextResponse.json(
        { 
          success: false,
          message: 'La contraseÃ±a debe tener al menos 8 caracteres' 
        },
        { status: 400 }
      );
    }

    // Verificar si el usuario ya existe
    try {
      const existingUser = await prisma.user.findUnique({
        where: { email },
      });

      if (existingUser) {
        return NextResponse.json(
          { 
            success: false,
            message: 'Ya existe una cuenta con este email' 
          },
          { status: 409 }
        );
      }
    } catch (prismaError) {
      console.log('âš ï¸ Error de Prisma (usando fallback):', prismaError);
      // Fallback: permitir registro sin verificaciÃ³n duplicada
    }

    // Hash de la contraseÃ±a
    const hashedPassword = await bcrypt.hash(password, 12);

    try {
      // Intentar crear usuario en Prisma
      const user = await prisma.user.create({
        data: {
          name,
          email,
          password: hashedPassword,
          role: 'user',
          emailVerified: new Date(),
        },
        select: {
          id: true,
          name: true,
          email: true,
          role: true,
          createdAt: true,
        },
      });

      console.log('âœ… Usuario creado en BD:', user.email);

      // Enviar email de bienvenida (opcional)
      try {
        const welcomeTemplate = emailService.getWelcomeTemplate(name);
        await emailService.sendEmail({
          to: email,
          subject: welcomeTemplate.subject,
          html: welcomeTemplate.html,
          text: welcomeTemplate.text,
        });
        console.log(`âœ… Email de bienvenida enviado a: ${email}`);
      } catch (emailError) {
        console.log(`âš ï¸ No se pudo enviar email de bienvenida: ${emailError}`);
      }

      return NextResponse.json(
        { 
          success: true,
          message: 'Usuario creado exitosamente',
          user: {
            id: user.id,
            name: user.name,
            email: user.email,
            role: user.role,
          },
        },
        { status: 201 }
      );

    } catch (prismaError) {
      console.log('âš ï¸ Error de BD, usando registro temporal:', prismaError);
      
      // âœ… FALLBACK: Crear usuario temporal en memoria
      const tempUser = {
        id: `temp_${Date.now()}`,
        name,
        email,
        role: 'user',
        createdAt: new Date(),
      };

      console.log('âœ… Usuario temporal creado:', tempUser.email);

      return NextResponse.json(
        { 
          success: true,
          message: 'Usuario creado exitosamente (modo temporal)',
          user: tempUser,
        },
        { status: 201 }
      );
    }

  } catch (error) {
    console.error('âŒ Error en registro:', error);
    return NextResponse.json(
      { 
        success: false,
        message: 'Error interno del servidor' 
      },
      { status: 500 }
    );
  }
}
